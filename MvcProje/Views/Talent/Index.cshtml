<!DOCTYPE html>
<html>
<head>
    <title>Yetenekler</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Skills Profile Widget template Responsive, Login form web template,Flat Pricing tables,Flat Drop downs  Sign up Web Templates, Flat Web Templates, Login sign up Responsive web template, SmartPhone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--Custom Theme files-->
    <link href="~/AdminLTE-3.0.4/Skills_Theme/web/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!--//Custom Theme files -->
    <!--web font-->
    <link href='//fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic' rel='stylesheet' type='text/css'>
    <!--//web font-->
    <!--circle-chart-->
    <script src="~/AdminLTE-3.0.4/Skills_Theme/web/js/jquery-1.11.1.min.js"></script>
    <!--//circle-chart-->
    <!--ResponsiveTabs-->
    <script src="~/AdminLTE-3.0.4/Skills_Theme/web/js/easyResponsiveTabs.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#horizontalTab').easyResponsiveTabs({
                type: 'default', //Types: default, vertical, accordion
                width: 'auto', //auto or any width like 600px
                fit: true   // 100% fit in a container
            });
        });
    </script>
    <!--//ResponsiveTabs-->
</head>
<style>
    .button {
        background-color: #008CBA; /* Green */
        border: none;
        color: white;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
    }

</style>
<body>
    <!-- main -->
    <div class="main">
        <h1>Yetenek Profil Sayfası</h1>
        <div class="main-info w3l">
            <div class="main-row">
                <!-- main-row-one -->

                @foreach (var item in Model)
                {
                    <div class="profile-grid logo wthree">
                        <img src="~/AdminLTE-3.0.4/Skills_Theme/web/images/fotograf.png" alt="">
                        <h2>@item.Name</h2>
                        <p>@item.About</p>

                    </div>
                    <h3 class="title">Beceriler</h3>
                    <div class="col-md-6 skills-right bar_group">

                        <div class='bar_group__bar thin' label='@item.Skill1 &nbsp;&nbsp; @item.Rate1%' value='@item.Rate1'></div>
                        <div class='bar_group__bar thin' label='@item.Skill2 &nbsp;&nbsp; @item.Rate2%' value='@item.Rate2'></div>
                        <div class='bar_group__bar thin' label='@item.Skill3 &nbsp;&nbsp; @item.Rate3%' value='@item.Rate3'></div>
                        <div class='bar_group__bar thin' label='@item.Skill4 &nbsp;&nbsp; @item.Rate4%' value='@item.Rate4'></div>
                        <div class='bar_group__bar thin' label='@item.Skill5 &nbsp;&nbsp; @item.Rate5%' value='@item.Rate5'></div>
                    </div>
                    <a href="/Heading/Index/" class="button">Admin Paneline Dön</a>
                    <a href="/Talent/Add/" class="button">Yetenek Ekle</a>
                    <a href="/Talent/Update/@item.TalentID" class="button">Yetenek Güncelle</a>
                    <a href="/Talent/Delete/@item.TalentID" class="button">Yetenek Sil</a>
                    <!--bar-js-->
                    <script src="~/AdminLTE-3.0.4/Skills_Theme/web/js/bars.js"></script>
                    <div class="social-icons agileits">
                        <ul>
                            <li><a href="https://www.linkedin.com/in/bernakahraman/" class="be"></a></li>
                        </ul>
                    </div>
                    

                    <div class="clear"> </div>
                }
            </div>
        </div>
    </div>
    <!-- main -->
</body>
</html>
