<div class="col-md-3">
    <a href="/WriterPanelMessage/NewMessage/" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Seçenekler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">

                <li class="nav-item active">
                    <a href="/WriterPanelMessage/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.gelen</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilen Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.giden</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/NoReadMessage/" class="nav-link">
                        <i class="far fa-envelope"></i> Okunan Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.okunmadı</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a href="/WriterPanelMessage/ReadMessage/" class="nav-link">
                        <i class="far fa-envelope"></i> Okunmamış Mesajlar
                        <span class="badge bg-primary float-right">@ViewBag.okundu</span>

                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslaklar
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-filter"></i> Spam
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                    </a>
                </li>
            </ul>
        </div>
        <!-- /.card-body -->
    </div>
